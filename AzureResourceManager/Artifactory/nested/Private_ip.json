{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "networkInterfaceName": {
      "type": "string"
    },
    "subnetRef": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "ipAddressName": {
      "type": "string"
    },
    "ipAddressSku": {
      "type": "string"
    },
    "ipAddressType": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('networkInterfaceName')]",
      "apiVersion": "2020-05-01",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "[parameters('ipAddressType')]",
              "privateIPAddress":"[parameters('networkInterfaceName').ipConfigurations[0].properties.privateIPAddress]",
              "subnet": {
                "id": "[parameters('subnetRef')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "ipAddressName": {
      "type": "string",
      "value": "[parameters('ipAddressName')]"
    },
    "ipAddressSku": {
      "type": "string",
      "value": "[parameters('ipAddressSku')]"
    },
     "ipAddressType": {
      "type": "string",
      "value": "[parameters('ipAddressType')]"
    }
  }
}
